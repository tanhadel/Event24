@using System.Globalization
@using Examarbeta.Helperfunction
@using Examarbeta.Models.ViewModels
@model IEnumerable<EventItemViewModel>
@foreach (var eventItem in Model)
{
    <div class="event-card">
        <!-- Event Header -->
        <div class="event-card-header">
            <h3>@eventItem.Title</h3>
            <p>@eventItem.EventsInfo</p>
        </div>
        <!-- Event Images -->
        @if (eventItem.AdditionalImages != null && eventItem.AdditionalImages.Any())
        {
            @foreach (var image in eventItem.AdditionalImages)
            {
                <img src="@image" alt="@eventItem.AltImageText" class="event-image" />
            }
        }
        <!-- Event Info -->
        <div class="event-card-info">
            <div class="info-container">
                <p class="text-gray35">@eventItem.EventDate.ToString("MMMM dd, yyyy")</p>
            </div>
            <div class="event-details">
             <p>@(CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "sv" ? "Pris: " : "Price: ") @eventItem.EventPrice</p>
             <p>@(CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "sv" ? "Kapacitet: " : "Capacity: ") @eventItem.EventCapacity</p>
            </div>
            <div class="info-container">
                <p class="text-gray35">@(CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "sv" ? "Plats: " : "Place: ")@eventItem.EventPlace</p>
            </div>

            <div class="info-container">
                <p>@(CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "sv" ? "Ägare: " : "Owner: ") @eventItem.EventOwner</p>
            </div>
            <div class="event-card-description">
                @Html.Raw(eventItem.EventDescription.RemoveHtmlTags())
            </div>
            <div class="info-container">
                <a class="btn-white" href="/">@(CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "sv" ? "Gå till start" : "Go to Home")</a>
            </div>

        </div>
        

    </div>
}
